{
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "netflix-ui/build/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api-server.js"
        },
        {
            "src": "/about",
            "dest": "netflix-ui/build/about.html"
        },
        {
            "src": "/contact",
            "dest": "netflix-ui/build/contact.html"
        },
        {
            "src": "/(.*)",
            "dest": "netflix-ui/build/$1"
        }
    ]
}

